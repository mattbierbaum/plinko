{
"simulation": {
    "eps": 1e-8,
    "dt": 1e-3,
    "max_steps": 8000,
    "equal_time": false,
    "accuracy": true,
    "linear": true,
    "record_objects": true,
    "verbose": false,
    "threads": 8
},
"objects": [
    { 
        "type": "tri-lattice", "rows": 2, "columns": 5, "top": 1.0,
        "object": { "type": "circle", "pos": [ 0.5, 0.5], "rad": 0.35, "damp": 0.80}
    }
],
"particles": [ 
    { 
        "type": "uniform", 
        "p0": [2.00, 4.2], 
        "p1": [2.00, 4.2], 
        "v0": [-0.510000001, -0.4], 
        "v1": [0.510000001, -0.4], 
        "N": 80000
    }
],
"forces": [ { "type": "gravity", "g": -1.0 } ],
"interrupts": [ 
    { "type": "collision", "object": { "type": "ref", "name": "bottom" } },
    { "type": "max_collisions", "max": 3000 }
],
"observers": [
    {
        "type": "pgm", 
        "filename": "test.pgm", 
        "format": "pgm5",
        "blend": "add",
        "norm": "eq_hist",
        "box": { "type": "ref", "name": "boundary"},
        "resolution": 4000,
        "triggers": [
            {"type": "max_collisions", "max": 1}
        ]
    },
    {"type": "collision_counter", "filename": "test.collisions"},
    {"type": "step", "interval": 500}
],
"neighborlist": {
    "type": "cell",
    "ncells": [100, 100],
    "buffer": 0.1,
    "box": { "type": "ref", "name": "boundary" }
}
}